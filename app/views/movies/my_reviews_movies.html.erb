<div class="py-9 sm:py-6 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <div class="mb-10 md:mb-16">
      <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-6 lg:text-3xl"><%= t('.title') %></h2>
    </div>

    <!-- メニューバー -->
    <%= render 'shared/menubar' %>
    <!-- ここまで -->
  
    <div class="grid gap-4 sm:grid-cols-2 md:gap-6 lg:grid-cols-3 xl:grid-cols-3 xl:gap-8 z-40">
      <% if @reviews_movies.present? %>
        <% @reviews_movies.each do |movie| %>
          <%= render 'movie', movie: movie.movie %>
        <% end %>
      <% else %>
        <h1 class="text-2xl">
          <%= t('.no_result') %>
        </h1>
      <% end %>
    </div>
    <%= paginate @reviews_movies %>
  </div>
</div>