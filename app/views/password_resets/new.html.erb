<% content_for(:title, t('.title')) %>
<div class="container mx-auto">
  <div class="w-full max-w-md mx-auto mt-10">
    <h1 class="text-2xl font-semibold text-center"><%= t('.title') %></h1>
    <%= form_with url: password_resets_path, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :email, User.human_attribute_name(:email), class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, class: "w-full p-2 border rounded shadow appearance-none text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
    
      <%= f.submit t('.submit'), class: "w-full p-2 bg-blue-500 hover:bg-blue-700 text-white font-bold rounded cursor-pointer" %>
    <% end %>
  </div>
</div>