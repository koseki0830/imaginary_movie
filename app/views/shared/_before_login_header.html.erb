<div class="bg-yellow-300 lg:pb-12" style="z-index: 1; position: relative;">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <header class="flex items-center justify-between py-1 md:py-1">
      <!-- logo - start -->
      <%= link_to root_path do %>
        <%= image_tag 'title_logo.png', size: "155x20" %>
      <% end %>
      <!-- logo - end -->

      <!-- nav - start -->
      <nav class="lg:flex lg:gap-12">
        <%= link_to t('defaults.to_movie_index'), movies_path, class: "sm:text-xs lg:text-lg font-semibold text-gray-600 transition duration-100 hover:text-indigo-500 active:text-indigo-700" %>
        <%= link_to t('defaults.to_rankings'), rankings_sum_path, class: "sm:text-xs lg:text-lg font-semibold text-gray-600 transition duration-100 hover:text-indigo-500 active:text-indigo-700" %>
        <%= link_to t('defaults.to_user_register'), new_user_path, class: "sm:text-xs lg:text-lg font-semibold text-gray-600 transition duration-100 hover:text-indigo-500 active:text-indigo-700" %>
      </nav>
      <!-- nav - end -->

      <!-- buttons - start -->
      <div class="-ml-8 flex-col gap-2.5 sm:flex-row sm:justify-center lg:flex lg:justify-start">
        <%= link_to t('defaults.to_login_page'), login_path, class: "inline-block rounded-lg bg-blue-600 px-8 py-3 text-center sm:text-xs lg:text-base font-semibold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-indigo-600 focus-visible:ring active:bg-indigo-700" %>
      </div>
      <!-- buttons - end -->
    </header>
  </div>
</div>